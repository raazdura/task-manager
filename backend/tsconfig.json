{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",   // Set baseUrl to the `src` folder
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": ["src/**/*.ts"],  // Includes all TypeScript files inside the `src` directory
  "exclude": ["node_modules"]
}
